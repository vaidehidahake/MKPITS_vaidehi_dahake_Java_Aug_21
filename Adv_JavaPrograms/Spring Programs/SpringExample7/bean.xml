<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="emp" class="com.example.springex7.Employee">
        <property name="id" value="10"></property>
        <property name="name" value="Vaidehi"></property>

    </bean>

    <bean id="rob" class="com.example.springex7.Report">
        <property name="listemp">
            <list>
                <!--we can use configuration that is already made in bean.xml -->
                <ref bean="emp"></ref>
                <bean class="com.example.springex7.Employee">
                    <property name="id" value="13"></property>
                    <property name="name" value="ridhi"></property>
                </bean>

                <bean class="com.example.springex7.Employee">
                    <property name="id" value="15"></property>
                    <property name="name" value="Neha"></property>
                </bean>

                <bean class="com.example.springex7.Employee">
                    <property name="id" value="20"></property>
                    <property name="name" value="Prachi"></property>
                </bean>
            </list>

        </property>

    </bean>
</beans>